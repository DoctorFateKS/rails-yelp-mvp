<h1>New Review</h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, as: :select, collection: (0..5).to_a, prompt: "Choose a rating" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
